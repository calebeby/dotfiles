snippet if
	if ${1:condition}
		${2:body}
	endif

snippet function
	function! ${1:name}(${2:arguments})
		${3:body}
	endfunction

snippet P
	Plug '${1:foo/bar}'

snippet for
	for ${1:i} in ${2:array}
	  ${3:body}
	endfor

snippet autocmd
alias augroup
alias au
	augroup ${1:name}
		autocmd!
		autocmd! ${2}
	augroup END

